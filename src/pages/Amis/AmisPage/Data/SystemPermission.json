{
  "title": "菜单管理",
  "type": "page",
  "body": [
    {
      "type": "tpl",
      "tpl": "permissionKeys is ${permissionKeys|json}"
    },
    {
      "filterTogglable": false,
      "syncLocation": false,
      "className": "",
      "type": "crud",
      "autoFillHeight": true,
      "name": "mainTable",
      "bulkActions": [],
      "id": "mainTable",
      "api": {
        "method": "get",
        "url": "/api/permission/page",
        "responseData": {
          "&": "$$"
        }
      },
      "autoGenerateFilter": {
        "showBtnToolbar": false
      },
      "headerToolbar": [
        "filter-toggler",
        {
          "type": "export-excel",
          "label": "导出excel",
          "api": {
            "url": "/api/permission/page",
            "method": "get",
            "data": {
              "page": 1,
              "perPage": 99999
            }
          }
        },
        {
          "level": "primary",
          "icon": "fa fa-plus",
          "label": "新增",
          "type": "button",
          "id": "addButton",
          "onEvent": {
            "click": {
              "actions": [
                {
                  "actionType": "dialog",
                  "dialog": {
                    "title": ["新增"],
                    "closeOnEsc": true,
                    "closeOnOutside": true,
                    "body": {
                      "mode": "horizontal",
                      "api": "post:/v1/permission/add",
                      "labelWidth": 120,
                      "type": "form",
                      "debug": true,
                      "name": "menuEditForm",
                      "title": "",
                      "body": { "$ref": "editDialogBody" }
                    }
                  }
                }
              ]
            }
          }
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "ID",
          "toggled": false,
          "searchable": {
            "type": "input-text",
            "name": "id",
            "label": "id",
            "placeholder": "请输入"
          }
        },
        {
          "name": "name",
          "label": "名称"
        },
        {
          "name": "type",
          "label": "类型",
          "filterable": {
            "options": [
              { "label": "一级菜单", "value": "0" },
              { "label": "子菜单", "value": "1" },
              { "label": "按钮权限", "value": "2" }
            ]
          },
          "searchable": {
            "type": "select",
            "name": "type",
            "label": "类型",
            "searchable": true,
            "options": [
              { "label": "一级菜单", "value": "0" },
              { "label": "子菜单", "value": "1" },
              { "label": "按钮权限", "value": "2" }
            ]
          }
        },
        {
          "name": "icon",
          "label": "图标"
        },
        {
          "name": "component",
          "label": "组件"
        },
        {
          "name": "url",
          "label": "url"
        },
        {
          "name": "sortNo",
          "label": "排序"
        },
        {
          "fixed": "right",
          "width": 346,
          "label": "操作",
          "type": "operation",
          "buttons": [
            {
              "label": "编辑",
              "type": "button",
              "level": "default",
              "icon": "fa fa-pen-to-square",
              "actionType": "dialog",
              "dialog": {
                "title": ["编辑"],
                "closeOnEsc": true,
                "closeOnOutside": true,
                "body": {
                  "mode": "horizontal",
                  "api": "post:/v1/permission/update",
                  "labelWidth": 120,
                  "type": "form",
                  "name": "menuEditForm",
                  "title": "",
                  "body": { "$ref": "editDialogBody" }
                }
              }
            },
            {
              "label": "添加下级",
              "type": "button",
              "hiddenOn": "${type=='1'}",
              "onEvent": {
                "click": {
                  "actions": [
                    {
                      "actionType": "click",
                      "componentId": "addButton",
                      "args": {
                        "parentId": "${id}",
                        "menuType": "2"
                      }
                    }
                  ]
                }
              }
            },
            {
              "label": "删除",
              "type": "button",
              "level": "danger",
              "icon": "fa fa-trash-can",
              "actionType": "ajax",
              "confirmText": "确定删除操作吗?",
              "api": "/api/permission/remove/${id}"
            }
          ]
        }
      ]
    }
  ],
  "definitions": {
    "editDialogBody": {
      "type": "grid",
      "columns": [
        {
          "type": "hidden",
          "name": "id"
        },
        {
          "label": "菜单类型",
          "placeholder": "菜单类型",
          "name": "menuType",
          "type": "button-group-select",
          "options": [
            { "label": "一级菜单", "value": "0" },
            { "label": "子菜单", "value": "1" },
            { "label": "按钮权限", "value": "2" }
          ],
          "required": true,
          "clearable": false,
          "columnClassName": "mb-3",
          "md": 12,
          "sm": 12,
          "xs": 12,
          "lg": 12,
          "value": "0",
          "onEvent": {
            "change": {
              "actions": [
                {
                  "actionType": "setValue",
                  "componentName": "menuEditForm",
                  "args": {
                    "value": {
                      "parentId": "${ menuType==0? '1': parentId }"
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "type": "tree-select",
          "name": "parentId",
          "label": "上级菜单",
          "columnClassName": "mb-3",
          "required": true,
          "searchable": true,
          "disabledOn": "${ menuType=='0' }",
          "source": {
            "method": "get",
            "url": "/api/permission/page",
            "data": {
              "type": "1,2"
            }
          },
          "labelField": "name",
          "valueField": "id",
          "value": "1",
          "md": 12,
          "sm": 12,
          "xs": 12,
          "lg": 12
        },
        {
          "clearable": true,
          "columnClassName": "mb-3",
          "label": "菜单名称",
          "type": "input-text",
          "required": true,
          "md": 12,
          "name": "name",
          "sm": 12,
          "xs": 12,
          "lg": 12,
          "placeholder": "菜单名称",
          "value": ""
        },
        {
          "label": "前端组件名",
          "name": "component",
          "type": "input-text",
          "value": "",
          "clearable": true,
          "columnClassName": "mb-3",
          "md": 12,
          "sm": 12,
          "xs": 12,
          "lg": 12,
          "visibleOn": "${menuType !=='2' }",
          "clearValueOnHidden": true
        },
        {
          "label": "菜单权限编码",
          "name": "perms",
          "type": "input-text",
          "value": "",
          "clearable": true,
          "columnClassName": "mb-3",
          "md": 12,
          "sm": 12,
          "xs": 12,
          "lg": 12,
          "visibleOn": "${menuType =='2' }",
          "clearValueOnHidden": true
        },
        {
          "label": "菜单图标",
          "name": "icon",
          "type": "input-text",
          "value": "",
          "clearable": true,
          "columnClassName": "mb-3",
          "md": 12,
          "sm": 12,
          "xs": 12,
          "lg": 12,
          "visibleOn": "${menuType !=='2' }",
          "clearValueOnHidden": true
        },
        {
          "label": "排序",
          "name": "sortNo",
          "type": "input-number",
          "value": "",
          "columnClassName": "mb-3",
          "md": 12,
          "sm": 12,
          "xs": 12,
          "lg": 12
        },
        {
          "label": "是否缓存路由",
          "name": "isKeepAlive",
          "type": "select",
          "options": [
            {
              "label": "是",
              "value": "1"
            },
            {
              "label": "否",
              "value": "0"
            }
          ],
          "value": "",
          "clearable": true,
          "columnClassName": "mb-3",
          "md": 12,
          "sm": 12,
          "xs": 12,
          "lg": 12,
          "visibleOn": "${menuType !='2' }",
          "clearValueOnHidden": true
        },
        {
          "label": "跳转地址",
          "name": "redirect",
          "type": "input-text",
          "value": "",
          "clearable": true,
          "columnClassName": "mb-3",
          "md": 12,
          "sm": 12,
          "xs": 12,
          "lg": 12,
          "visibleOn": "${menuType !='2' }",
          "clearValueOnHidden": true
        }
      ]
    }
  }
}
